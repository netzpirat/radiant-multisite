- render_region :main do |main|
  - main.edit_header do
    %h1 Edit Page
  - main.edit_form do
    - form_for @page, :url => admin_page_path(@page), :html => {:method => :put, :multipart => true} do |fields|
      = render :partial => "fields", :object => fields
  - main.edit_popups do
    = render :partial => "popups"
= render :partial => "edit_styles"